{
  "rules": {
    //TODO: "preset-japanese": true,
    "preset-jtf-style": {
        // 全角文字と半角文字の間にスペースを入れるので無効化
        "3.1.1.全角文字と半角文字の間": false,
        // 括弧内の句点を許可する
        "4.1.1.句点(。)": false,
        // コロンは半角を使用する
        "4.2.7.コロン(：)": false,
        // 全角の丸カッコを強制されるので無効化
        "4.3.1.丸かっこ（）": false,
        // 全角の大カッコを強制されるので無効化
        "4.3.2.大かっこ［］": false
    },
  },
  "filters": {
    "comments": true,
    "whitelist": {
      "allow": [
        "/[a-zA-Z0-9]+\?/", //英数字の後の疑問符は半角で良い
        "/\\[.*?\\]/", //カギカッコ内の任意の文字を許可
        "Ursa Major Solar, Inc.",  //固有名詞
        "--なし--", //Salesforce用語
        "-to-", //Salesforce用語
        "...", // ボタンのラベルなど,
        " から ", //日本語が前後にあるfromの訳
        " まで", //日本語が前後にあるtoの訳
      ]
    }
  }
}